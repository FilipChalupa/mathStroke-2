{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"outDir": "../dist/server",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"typeRoots": ["../node_modules/@types"]
	},
	"exclude": ["../dist", "../client", "../node_modules", "../common/**/*"]
}
